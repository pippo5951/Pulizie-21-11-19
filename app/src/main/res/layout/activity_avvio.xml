<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@drawable/gradient"
    tools:context="com.gbsoft.giubotta.pulizie.AvvioActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="16dp"
        android:fontFamily="times"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:background="@drawable/angolo_rotondo"
        android:textColor="@color/slide2"
        android:textSize="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turni Pulizie Lotto 14" />


    <Button
        android:id="@+id/btnNuovo"
        android:layout_marginTop="16dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Genera nuovo Calendario" />

    <Button
        android:id="@+id/btnCarica"
        android:layout_marginTop="16dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Carica ultimo calendario" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/condom" />

</LinearLayout>
