<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical" >

    <TextView
        android:textStyle="bold|italic"
        android:id="@+id/tv_Data"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:background="@color/colortitoli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="16dp"
        android:textStyle="bold|italic"
        android:id="@+id/textView"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_nuovo"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:fontFamily="times"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView2"
        android:textSize="10dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:id="@+id/ll_atrio"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/angolo_rotondo"
        android:gravity="center"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:entries="@array/nomiA"
            android:prompt="@string/country_prompt" />
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:entries="@array/nomiB" />
        <EditText
            android:id="@+id/et_giorno"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="gio. n°"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_corte"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/angolo_rotondo"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:entries="@array/nomiCortile"
            android:prompt="@string/country_prompt" />
        <EditText
            android:id="@+id/et_giorno2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="gio. n°"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_box"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/angolo_rotondo"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:entries="@array/nomiBox"
            android:prompt="@string/country_prompt" />
        <EditText
            android:id="@+id/et_giorno1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="gio. n°"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_spunta"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@drawable/angolo_rotondo"
        android:layout_width="281dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorAccent"
            android:background="@color/colortitoli"
            android:id="@+id/textView3"
            android:gravity="center"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Spunta per selezionare" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|top"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_1"
                android:layout_width="90dp"
                android:text="Gen"
                android:layout_height="wrap_content"
                android:ems="10" />
            <CheckBox
                android:id="@+id/cb_7"
                android:layout_width="90dp"
                android:text="Lug"
                android:layout_height="wrap_content"
                android:ems="10" />
            <CheckBox
                android:id="@+id/cb_31"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Scala31" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_2"
            android:layout_width="90dp"
            android:text="Feb"
            android:layout_height="wrap_content"
            android:ems="10" />
        <CheckBox
            android:id="@+id/cb_8"
            android:layout_width="90dp"
            android:text="Ago"
            android:layout_height="wrap_content"
            android:ems="10" />

        <CheckBox
            android:id="@+id/cb_33"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Scala33" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_3"
            android:layout_width="90dp"
            android:text="Mar"
            android:layout_height="wrap_content"
            android:ems="10" />
        <CheckBox
            android:id="@+id/cb_9"
            android:layout_width="90dp"
            android:text="Set"
            android:layout_height="wrap_content"
            android:ems="10" />
        <CheckBox
            android:id="@+id/cb_atrio"
            android:layout_width="90dp"
            android:text="atrio"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Apr" />

        <CheckBox
            android:id="@+id/cb_10"
            android:layout_width="90dp"
            android:text="Ott"
            android:layout_height="wrap_content"
            android:ems="10" />
        <CheckBox
            android:id="@+id/cb_corte"
            android:layout_width="90dp"
            android:text="cortile"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_5"
            android:layout_width="90dp"
            android:text="Mag"
            android:layout_height="wrap_content"
            android:ems="10" />
        <CheckBox
            android:id="@+id/cb_11"
            android:layout_width="90dp"
            android:text="Nov"
            android:layout_height="wrap_content"
            android:ems="10" />
        <CheckBox
            android:id="@+id/cb_box"
            android:layout_width="90dp"
            android:text="box"
            android:layout_height="wrap_content"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_6"
            android:layout_width="90dp"
            android:text="Giu"
            android:layout_height="wrap_content"
            android:ems="10" />
        <CheckBox
            android:id="@+id/cb_12"
            android:layout_width="90dp"
            android:text="Dic"
            android:layout_height="wrap_content"
            android:ems="10" />
        <CheckBox
            android:id="@+id/cb_altro"
            android:layout_width="90dp"
            android:text="Altro"
            android:layout_height="wrap_content"
            android:ems="10" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_primo_giorno"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@color/colortitoli"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:text="Primo giorno del mese"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <CheckBox
            android:id="@+id/cb_martedi"
            android:layout_width="90dp"
            android:text="Martedi"
            android:layout_height="wrap_content"
            android:ems="10" />
        <CheckBox
            android:id="@+id/cb_venerdi"
            android:layout_width="90dp"
            android:text="Venerdi"
            android:layout_height="wrap_content"
            android:ems="10" />
    </LinearLayout>
</LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">
        <Button
            android:id="@+id/btnSubmit"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifica esattezza" />
        <Button
        android:id="@+id/bt_invia"
        android:visibility="gone"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crea Calendario" />
    </LinearLayout>

        <Button
        android:visibility="gone"
        android:id="@+id/bt_home"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continua" />

    <Button
        android:visibility="gone"
        android:id="@+id/bt_salva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salva Impostazioni" />

    </LinearLayout>